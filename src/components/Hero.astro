---
import NavBar from "./NavBar.astro";
import CodeTyping from "./CodeTypingComp/CodeTypingComp.svelte";
---

<section id="hero">
  <div class="bg-cover bg-center bg-[url('/imgs/HeroImage.jpg')] h-screen mb-4">
    <div
      class="px-4  space-y-2 lg:space-y-5 flex flex-col justify-start bg-gradient-to-b 
      md:bg-gradient-to-b  from-transparent to-neutral-900 backdrop-blur-lg w-full h-full 
      backdrop-brightness-50 backdrop-contrast-125 -backdrop-hue-rotate-15"
    > 
      <NavBar />
      <!-- title and typing effect section  -->
      <div class="flex flex-col pt-10 space-y-4 md:flex-row justify-center items-center">
        <!-- title text  -->
        <div
          class="flex flex-col justify-center items-center lg:pl-20 md:basis-1/2 group transition ease-in-out duration-500 md:hover:scale-125 md:hover:translate-x-10"
        >
          <div
            class="text-white font-semibold antialiased text-6xl lg:text-9xl md:group-hover:text-white  transition ease-in-out"
          >
            C.A.D
          </div>
          <div
            class="text-white font-normal brightness-110 saturate-150 indent-4 subpixel-antialiased text-xl lg:text-4xl md:group-hover:text-white  transition ease-in-out"
          >
            Ctrl Alt Delete
          </div>
        </div>
        <!-- typing effect  -->
        <div class="flex justify-center items-center md:basis-1/2 pt-8">
          <CodeTyping client:load />
        </div>
      </div>
    </div>
  </div>
</section>
