---
import NavBar from "./NavBar.astro";
---

<section id="hero">
  <div class="bg-cover bg-center bg-[url('/imgs/HeroImage.jpg')] h-screen">
    <div class="p-16 flex flex-col justify-center backdrop-blur-xl w-full h-full 
    backdrop-brightness-50 backdrop-contrast-125 -backdrop-hue-rotate-15">
      <!-- title and typing effect section  -->
      <div class="flex flex-row">
        <!-- title text  -->
        <div
          class="flex flex-col basis-1/2 group transition ease-in-out duration-500 md:hover:scale-90 md:hover:translate-x-10"
        >
          <div
            class="text-white font-semibold antialiased text-8xl md:group-hover:text-cyan-300 transition ease-in-out"
          >
            Coders Club
          </div>
          <div
            class="text-cyan-300 font-normal indent-4 subpixel-antialiased text-4xl md:group-hover:text-white transition ease-in-out"
          >
            Easwari Engineering College
          </div>
        </div>
        <!-- typing effect  -->
        <div class="basis-1/2">Typing effect</div>
      </div>
    </div>
  </div>
</section>
