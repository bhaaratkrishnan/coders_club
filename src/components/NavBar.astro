---
const navBarItems = [
  { name: "About Us", link: "#aboutUs" },
  { name: "Objectives", link: "#objectives" },
  { name: "Our Team", link: "#team" },
  { name: "Events", link: "#" },
];
---

<div class="hidden lg:flex flex-row justify-center items-center space-x-44 m-8">
  <!-- logo  -->
  <img
    src="/imgs/Logo.png"
    class="w-12 h-12 object-cover object-center transition ease-in-out hover:brightness-150 hover:saturate-150 hover:scale-110"
    alt=""
  />
  {
    navBarItems.map((item) => (
      <a href={item.link} >
        <div
          class="text-white font-semibold text-xl 
        hover:text-blue-600 transition ease-in-out hover:translate-y-2 hover:scale-105
        antialiased"
        >
          {item.name}
        </div>
      </a>
    ))
  }
</div>
